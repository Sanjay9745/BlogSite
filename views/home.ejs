<%- include("partials/header")%>

<h1>Home</h1>

<p><%=startingContent%></p>
<% posts.forEach((post)=>{%>

<h1><a href="/posts/<%= post._id %>"><%=post.title%></a></h1>
<% if(post.content.length<100){%>
    <p><%=post.content%></p>
    <%}else {%>
<p><%=post.content.substring(0,100)+"..."%>
<a href="/posts/<%= post._id %>">Read more</a></p>
<% }}) %>
<%- include("partials/footer")%>